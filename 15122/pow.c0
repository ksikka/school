int pow(int x, int y)
//@requires y>0;
{
if(y==1) return x;
return x*pow(x,y-1);
}

int fastpow (int x, int y)
//@requires y>0;
//@ensures \result==pow(x,y);
{
	int r = 1;
	int b = x; int e = y;
	while (e > 1) 
	//@loop_invariant e>=1;
	//@loop_invariant r*pow(b,e)==pow(x,y);
	{
		if (e % 2 == 1) r = b * r;
		b = b * b;
		e = e / 2;
	}
	//assert e==1;
	return r * b;
}
